SOURCE_DIR="libpciaccess-$portVersion"
PATCHES="libpciaccess-$portVersion.patchset"

ARCHITECTURES="?x86_gcc2 ?x86 x86_64"
SECONDARY_ARCHITECTURES="x86_64"

PROVIDES="
	libpciaccess$secondaryArchSuffix = $portVersion
	devel:libpciaccess$secondaryArchSuffix = $portVersion
	"
REQUIRES="
	haiku$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	"
BUILD_PREREQUIRES="
	devel:util_macros$secondaryArchSuffix
	cmd:autoconf
	cmd:libtool
	cmd:aclocal
	cmd:make
	cmd:gcc$secondaryArchSuffix
	cmd:ld$secondaryArchSuffix
	cmd:pkg_config$secondaryArchSuffix
	"

BUILD()
{
	autogen.sh
	runConfigure ./configure
	make
}

INSTALL()
{
	make install
	prepareInstalledDevelLib libpciaccess
	fixPkgconfig
}
